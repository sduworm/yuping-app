<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:autoLink="phone|email|map|web"
        android:background="@drawable/yuping_bubble_right"
        android:backgroundTint="#ee88aa"
        android:linksClickable="true"
        android:maxWidth="240dp"
        android:minHeight="10dp"
        android:layout_marginTop="-6dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:text="text"
        android:textColor="@color/black0"
        android:textColorLink="#3655bf"
        android:textSize="20sp"
        tools:targetApi="q" />

    <TextView
        android:id="@+id/refTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="1dp"
        android:layout_marginRight="24px"
        android:background="@drawable/shape_message_ref_bg"
        android:maxWidth="250dp"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="refff"
        android:visibility="visible" />
</LinearLayout>
