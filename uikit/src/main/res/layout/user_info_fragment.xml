<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/portraitBigImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="-20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/yuping_test_avatar_w" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:elevation="4dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/portraitImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/avatar_def" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:shadowColor="@color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:singleLine="true"
                        android:text="遇瓶"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:layout_marginTop="-30dp"
                android:backgroundTint="@color/transparent"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingStart="24dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/genderImageView"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="4dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/yuping_female" />

                            <TextView
                                android:id="@+id/accountTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="ID: 110000"
                                android:textColor="@color/gray23"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/alreadyFriendTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="好友"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_round_3"
                                android:backgroundTint="@color/green4"
                                android:layout_marginLeft="6dp"
                                android:paddingHorizontal="4dp"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/alreadyFollowTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="已关注"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_round_3"
                                android:backgroundTint="@color/yellow2"
                                android:layout_marginLeft="6dp"
                                android:paddingHorizontal="4dp"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/alreadyBlackTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="已拉黑"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_round_3"
                                android:backgroundTint="@color/gray0"
                                android:layout_marginLeft="6dp"
                                android:paddingHorizontal="4dp"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:minHeight="56dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/emailTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:text="个性签名个性签名三十个性签名个性签名三十个性签名个性签名三十"
                                android:textColor="@color/gray16"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View style="@style/Line" />
                    <cn.wildfire.chat.kit.widget.OptionItemView
                        android:id="@+id/editEmail"
                        style="@style/OptionItem"
                        android:background="@drawable/selector_option_item"
                        app:show_arrow_indicator="true"
                        app:title="编辑个性签名" />

                    <View style="@style/Line" />
                    <cn.wildfire.chat.kit.widget.OptionItemView
                        android:id="@+id/editItemView"
                        style="@style/OptionItem"
                        android:background="@drawable/selector_common_item"
                        app:show_arrow_indicator="true"
                        app:title="编辑个人资料" />

                    <LinearLayout
                        android:id="@+id/notSelfOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:visibility="visible">

                        <cn.wildfire.chat.kit.widget.OptionItemView
                            android:id="@+id/aliasOptionItemView"
                            style="@style/OptionItem"
                            android:background="@drawable/selector_common_item"
                            app:show_arrow_indicator="true"
                            app:title="好友备注名" />

                        <View style="@style/Line" />

                        <LinearLayout
                            android:id="@+id/addDenunciationButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            tools:visibility="visible">

                            <View style="@style/Line" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/selector_common_item">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawablePadding="6dp"
                                    android:text="举报"
                                    android:textColor="@color/blue3"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addBlackButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:visibility="visible">

                            <View style="@style/Line" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/selector_common_item">

                                <TextView
                                    android:id="@+id/addBlackButtonText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawablePadding="6dp"
                                    android:text="拉黑"
                                    android:textColor="@color/blue3"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chatButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            tools:visibility="visible">

                            <View style="@style/Line" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/selector_common_item">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@mipmap/ic_start_message"
                                    android:drawablePadding="6dp"
                                    android:text="聊天"
                                    android:textColor="@color/blue3"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- 上方导航栏 -->
    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:padding="14dp"
            android:src="@mipmap/ic_back"
            app:tint="@color/gray5" />

        <ImageView
            android:id="@+id/customToolbarEditIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:padding="12dp"
            android:src="@mipmap/yuping_edit"
            app:tint="@color/gray5" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="5dp">

        <Button
            android:id="@+id/unfollowButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightColorPrimary"
            android:text="取消关注"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:visibility="gone" />

        <Button
            android:id="@+id/followButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/inviteButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:text="加好友"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/uninviteButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightColorPrimary"
            android:text="删除好友"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:visibility="gone" />

    </LinearLayout>


</RelativeLayout>